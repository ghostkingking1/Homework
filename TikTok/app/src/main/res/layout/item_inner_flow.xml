<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.lang.String" /> <!-- 新增：导入String类 -->
        <variable
            name="viewModel"
            type="com.example.tiktok.viewmodel.InnerFlowViewModel" />
        <variable
            name="video"
            type="com.example.tiktok.model.VideoInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 视频播放View -->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> viewModel.togglePlayPause()}" />

        <!-- 暂停图标 -->
        <ImageView
            android:id="@+id/iv_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pause"
            android:visibility="@{viewModel.isPlaying ? android.view.View.GONE : android.view.View.VISIBLE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!-- 右侧操作栏 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp">

            <!-- 点赞按钮（修复：移除参数） -->
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@{video.isLiked() ? @drawable/ic_liked : @drawable/ic_unliked}"
                android:onClick="@{() -> viewModel.toggleLike()}" /> <!-- 关键修复 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(video.likeCount)}"
                android:layout_gravity="center" />

            <!-- 评论按钮 -->
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_comment"
                android:layout_marginTop="16dp"
                android:onClick="@{() -> viewModel.openComment(video)}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(video.commentCount)}"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>